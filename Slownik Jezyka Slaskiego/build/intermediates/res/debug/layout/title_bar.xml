<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title_layout"
                android:background="@color/topbar_grey" >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"

                android:id="@+id/titlebar_linearlayout_tap_to_change_directions" >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                android:background="@drawable/list_item"
                    android:gravity="center"
                android:padding="0dip"
                android:layout_margin="0dip">

                <FrameLayout
                    android:id="@+id/hello_world"
                    android:layout_width="0dip"
                    android:layout_weight="1.1"
                    android:layout_height="fill_parent"></FrameLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="2.9"
                    android:layout_height="fill_parent"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:weightSum="2" >

                    <TextView
                        android:id="@+id/titlebar_silesian_textView"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:text="@string/from_silesian"
                        android:background="@android:color/transparent"
                        android:textSize="12sp"
                        android:textColor="@color/darkergrey_titlebar"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:singleLine="false"
                        android:layout_margin="0dip"
                        android:padding="0dip" />

                    <ImageView
                            android:layout_width="0dip"
                        android:layout_weight="1"
                            android:layout_height="fill_parent"
                            android:src="@mipmap/ic_launcher"
                            android:background="@android:color/transparent"
                            android:id="@+id/imageView2"
                        android:layout_margin="0dip"
                        android:padding="0dip" />

                </LinearLayout>

                <ImageView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                        android:layout_height="15dip"
                        android:background="@android:color/transparent"
                        android:id="@+id/titlebar_arrow_tap_to_change_directions"
                    android:layout_margin="0dip"
                    android:padding="0dip" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="2.9"
                    android:weightSum="2"
                    android:background="@android:color/transparent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/imageView4"
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                        android:layout_margin="0dip"
                        android:padding="2dip" />

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/titlebar_polish_textView"
                        android:background="@android:color/transparent"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:text="@string/to_polish"


                        android:textSize="12sp"
                        android:textColor="@color/darkergrey_titlebar"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:singleLine="false"
                        android:layout_margin="0dip"
                        android:padding="0dip" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="0dip"
                    android:layout_weight="1.1"
                    android:layout_height="fill_parent"
                    android:id="@+id/frameLayout"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:gravity="center_vertical"
                android:id="@+id/imageView">

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                android:padding="5dip">

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkergrey_titlebar"
                        android:id="@+id/topbar_editText" 
                        android:hint="@string/search"
                        android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:background="@color/topbar_darkgrey"
            android:textColor="@color/darkergrey_titlebar"
            android:text="@string/results" />

    </LinearLayout>


</RelativeLayout><!-- From: file:/Users/rafalmanka/Documents/pjwstk/touch_test/slownik-jezyka-slaskiego/Slownik%20Jezyka%20Slaskiego/src/main/res/layout/title_bar.xml -->